{
  "name": "KeepAll MAUI Development",
  "image": "mcr.microsoft.com/dotnet/sdk:8.0",
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "features": {
    "ghcr.io/devcontainers/features/dotnet:1": {
      "version": "8.0"
    }
  },
  "postCreateCommand": "dotnet workload install maui --ignore-failed-sources",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-dotnettools.dotnet-interactive-vscode"
      ]
    }
  },
  "forwardPorts": [5000, 5001],
  "portsAttributes": {
    "5000": {
      "label": "HTTP",
      "protocol": "http"
    },
    "5001": {
      "label": "HTTPS",
      "protocol": "https"
    }
  }
}
