<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KeepAll.App"
             x:Class="KeepAll.App.App">
  <Application.Resources>
    <ResourceDictionary>
      <!-- Colors -->
      <Color x:Key="ColorPrimary">#4F46E5</Color>
      <Color x:Key="ColorSuccess">#10B981</Color>
      <Color x:Key="ColorWarning">#F59E0B</Color>
      <Color x:Key="TextPrimary">#0F172A</Color>
      <Color x:Key="TextSecondary">#475569</Color>
      <Color x:Key="Surface">#FFFFFF</Color>
      <Color x:Key="SurfaceElevated">#F8FAFC</Color>

      <!-- Styles -->
      <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="16" />
      </Style>
      <Style TargetType="Button">
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="14,12" />
        <Setter Property="FontAttributes" Value="Bold" />
      </Style>
      <Style TargetType="Entry">
        <Setter Property="HeightRequest" Value="44" />
      </Style>
      <Style TargetType="ContentPage">
        <Setter Property="Padding" Value="16" />
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</Application>
