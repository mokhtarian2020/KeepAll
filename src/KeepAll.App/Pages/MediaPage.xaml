<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeepAll.App.Pages.MediaPage"
             Title="Media">
  <VerticalStackLayout Spacing="8">
    <HorizontalStackLayout Spacing="6">
      <Button Text="Books" Clicked="OnBooks" />
      <Button Text="Movies" Clicked="OnMovies" />
      <Button Text="Podcasts" Clicked="OnPodcasts" />
    </HorizontalStackLayout>

    <CollectionView x:Name="MediaView" ItemsSource="{Binding Items}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Grid Padding="10" ColumnDefinitions="Auto,*,Auto" BackgroundColor="{StaticResource SurfaceElevated}" Margin="0,8">
            <Frame WidthRequest="60" HeightRequest="90" CornerRadius="8" Padding="0" HasShadow="False" BackgroundColor="#EEF2FF">
              <Image Source="{Binding CoverUrl}" Aspect="AspectFill"/>
            </Frame>
            <VerticalStackLayout Grid.Column="1" Spacing="2" Padding="8,0">
              <Label Text="{Binding Title}" FontAttributes="Bold"/>
              <Label Text="{Binding AuthorOrCast}" FontSize="12" TextColor="{StaticResource TextSecondary}" />
              <Label Text="{Binding Year}" FontSize="12" TextColor="{StaticResource TextSecondary}" />
            </VerticalStackLayout>
            <Button Grid.Column="2" Text="Open" Clicked="OnOpenClicked"/>
          </Grid>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </VerticalStackLayout>
</ContentPage>
