<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeepAll.App.Pages.SettingsPage"
             Title="Settings">
  <VerticalStackLayout Spacing="12">
    <Label Text="KeepAll Settings" FontAttributes="Bold" FontSize="22" />
    <Label Text="Private by default. No ads, no tracking." TextColor="{StaticResource TextSecondary}" />
    <Switch IsToggled="True" />
    <Button Text="Export (JSON)" Clicked="OnExport"/>
  </VerticalStackLayout>
</ContentPage>
